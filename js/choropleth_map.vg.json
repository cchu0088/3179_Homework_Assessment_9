{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Deaths from cancer",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/cchu0088/3179_Homework_Assessment_9/main/js/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {"tooltip": {"field": "note"}}
      },

      {
        "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/cchu0088/3179_Homework_Assessment_9/main/data/deaths-from-cancer-who.csv"
            },
            "key": "Entity",
            "fields": ["Total deaths from malignant neoplasms among both sexes", "Population"]
          }
        },
        {"calculate": "datum['Total deaths from malignant neoplasms among both sexes']/ datum['Population'] * 10000", "as": "Death from cancer per 10,000 population"}
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Death from cancer per 10,000 population",
          "type": "quantitative",
          "scale": {"type": "threshold",
            "domain": [1, 10, 100],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Total deaths from malignant neoplasms among both sexes", "type": "quantitative"},
          {
            "field": "Death from cancer per 10,000 population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}





